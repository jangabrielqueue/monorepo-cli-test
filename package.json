{
  "name": "default",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@microsoft/signalr": "^3.1.0",
    "antd-dayjs-webpack-plugin": "0.0.8",
    "axios": "^0.21.1",
    "babel-plugin-import": "^1.13.0",
    "classnames": "^2.2.6",
    "customize-cra": "^0.9.1",
    "env-cmd": "^10.0.1",
    "firebase": "^8.2.9",
    "node-sass": "^4.14.1",
    "normalize-jss": "^4.0.0",
    "qrcode.react": "^1.0.0",
    "react": "^16.13.1",
    "react-app-polyfill": "^1.0.2",
    "react-app-rewired": "^2.1.5",
    "react-copy-to-clipboard": "^5.0.2",
    "react-dom": "^16.13.1",
    "react-error-boundary": "^2.3.1",
    "react-hook-form": "^5.7.2",
    "react-intl": "^3.12.0",
    "react-jss": "^10.5.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.4.3",
    "source-map-explorer": "^2.0.1",
    "url-search-params-polyfill": "^8.1.0"
  },
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "start": "react-app-rewired start",
    "build:uat": "env-cmd -f .env.uat react-scripts build",
    "build:prod": "react-app-rewired build",
    "deploy:uat": "env-cmd -f .env.uat react-app-rewired build && firebase use default && firebase deploy --only hosting:topup-uat-ezpay",
    "deploy:prod": "env-cmd -f .env.production react-app-rewired build && firebase use prod && firebase deploy --only hosting:deposit-prod-ezpay",
    "deploy:dev": "env-cmd -f .env.development react-app-rewired build && firebase use default && firebase deploy --only hosting:deposit-dev-ezpay",
    "standard-lint": "standard --fix",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint-plugin-react-hooks": "^4.0.8",
    "standard": "^14.3.4"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
